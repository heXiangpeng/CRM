<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_scheldule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeef0"
    tools:context="huayuan.com.crm.activity.AddNewSchelduleActivity">

    <include
        layout="@layout/titlebar"
        ></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_head"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"

                android:layout_marginTop="10dp"
                android:background="#fff"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="提醒方式"
                    android:textColor="#767676"
                    />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通预约"
                    android:textSize="18sp"
                    android:textColor="#767676"
                    android:padding="5dp"

                    android:background="@drawable/schedule_cornear"

                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提醒打电话"
                    android:textSize="18sp"
                    android:padding="5dp"

                    android:textColor="#767676"
                    android:background="@drawable/schedule_cornear"

                    />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提醒发短信"
                    android:textSize="18sp"
                    android:textColor="#767676"
                    android:padding="5dp"

                    android:background="@drawable/schedule_cornear"

                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="#9effffff"
                android:gravity="center_vertical"
                >



                <TextView
                    android:id="@+id/tv_setname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="相关客户"
                    android:textColor="#595757"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/rightarrow"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="#9effffff"
                android:gravity="center_vertical"
                >



                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="跟单人"
                    android:textColor="#595757"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/rightarrow"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="#9effffff"
                android:gravity="center_vertical"
                >



                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="介绍人"
                    android:textColor="#595757"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/rightarrow"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="#9effffff"
                android:gravity="center_vertical"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:text="提醒时间"
                    android:textColor="#767676"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="2017/04/07 11:04"
                    android:textSize="18sp"
                    android:textColor="#76d1bf"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/rightarrow"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="#9effffff"
                android:gravity="center_vertical"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:text="提醒内容"
                    android:textColor="#767676"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="主淫，脑子完全不够用吧..."
                    android:textSize="18sp"
                    android:gravity="start"
                    android:background="#fff"
                    android:textColor="@color/textsecondcolor"
                    android:textColorHint="@color/textsecondcolor"

                  />



            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:layout_height="50dp"
                android:text="确定新增"
                android:textSize="18sp"
                android:textColor="#fff"
                android:background="#5db6ae"
                />



        </LinearLayout>

    </ScrollView>



</RelativeLayout>
