<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_note_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    tools:context="huayuan.com.crm.activity.AddNoteTextActivity">

    <include
        layout="@layout/titlebar"
        ></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backcolor"
        android:layout_below="@+id/linear_head"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_setname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="相关客户"
                    android:textColor="@color/textsecondcolor"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/rightarrow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:padding="10dp"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:gravity="start"

                    android:textColor="@color/textsecondcolor"
                    android:textSize="18sp"
                    android:background="@drawable/schedule_cornear"
                    />


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/backcolor"

                    ></TextView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:id="@+id/linear_uploadimg"

                    android:background="#fff"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#505050"

                        />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="上传照片"
                        android:textColor="@color/textsecondcolor"
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="24dp"
                android:layout_height="50dp"
                android:text="确定新增"
                android:textSize="18sp"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
